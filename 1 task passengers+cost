#include <stdio.h>
 
int main (void)
{
int x = 0;


float y = 23.9,result, result1,result2;
int x1 = 2;
float y1 = 45.5;
int x2 = 3;
float y2 = 34.8;

 if (x == 0 )
 {
    result = x+y; // if x ==0 to result 0 passenger + cost
    printf("%.2f\n", result);
 }
  if (x1 == 2) 
{
    result1 = (y1 +1)/(x1+1);// if passengers more than 1 to cost+$1 and divided by number passenger except drivers
    printf("%.2f\n", result1);
}
 if (x2 == 3) 
{
    result2 = (y2 +1)/(x2+1);
    printf("%.2f\n", result2);
}
}

