#include <stdio.h>
 
int main (void)
{
int x;
float y,result;

scanf("%d",&x);
scanf("%f",&y); 

 if (x == 0)
 {
    result = x+y; // if x ==0 to result 0 passenger + cost
    printf("%.2f\n", result);
 }
  if (x >=1) 
{
    result = (y +1)/(x+1);// if passengers more than 1 to cost+$1 and divided by number passenger except drivers
    printf("%.2f\n", result);
}
return 0;
}
