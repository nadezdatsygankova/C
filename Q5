
#include <stdio.h>
#include <string.h>

void sortArray(char* ar, int size)
{
  int i,j,ch;
   for(i=1;i<size;i++)
    for(j=0;j<size-i;j++)
	    if(ar[j]>ar[j+1])
	    {
	  ch=ar[j];
	  ar[j] = ar[j+1];
	  ar[j+1]=ch;
	    }

}
int main()
{
  char str[100];
  char oldStr[100];
  char oldStr1[100];
  char str1[100];
  int i,j,l,m,k; 
       printf("Please enter first word: ");
       scanf ("%s",str);
       strncpy(oldStr,str,100);
       printf("Please enter the second word: ");
       scanf ("%s",str1);
       strncpy(oldStr1,str1,100);
     
  l=strlen(str);
  m=strlen(str1);
  if (l == m)
    {
      sortArray(str, l); /* sorting process */
      sortArray(str1, m);

     k = strncmp(str,str1,100);
        if (k == 0)
           printf("Yes! \"%s\" and \"%s\" are anagrams. ", oldStr,oldStr1);
        else
           printf("Sorry! \"%s\" and \"%s\" are not anagrams.",oldStr,oldStr1);
 

    }
   else 
   printf("Sorry! \"%s\" and \"%s\" are not anagrams.",oldStr,oldStr1);
  
   
  }

  
  




  
  



