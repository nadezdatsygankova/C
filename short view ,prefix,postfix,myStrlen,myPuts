void myPuts(char*str)
{
   int i =0;
   while(str[i])
    {
      printf("%c",str[i]);
      i++;
    }
}

//short 

void myPuts(char*str)
{
   int i =0;
   while(str[i])
    {
      printf("%c",str[i++]);
      
    }
}
